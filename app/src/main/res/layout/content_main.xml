<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cs4492.cseuom.bluetoothdevicetracker.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:weightSum="1">

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:background="#c0c0c0"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:editable="false"
        android:ems="10"
        android:text="Connected Clients List"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="27dp"
        android:layout_marginLeft="-4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"/>

    <ListView
    android:id="@+id/connected_clients_list"
    android:layout_width="384dp"
    android:layout_height="208dp"
    android:clickable="true"
    android:drawSelectorOnTop="false"
    android:footerDividersEnabled="true"
    android:headerDividersEnabled="true"
    app:layout_constraintTop_toBottomOf="@id/editText"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/myButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView2"
        android:layout_weight="0.10"
        android:text="Start Tracking"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="1dp"
        app:layout_constraintTop_toBottomOf="@id/connected_clients_list"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/stopService"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="STOP TRACKING"
        app:layout_constraintLeft_toRightOf="@id/myButton"
        app:layout_constraintTop_toBottomOf="@id/connected_clients_list"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="195dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="99dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:text="@string/not_connected_to_network"
        android:textAlignment="textStart"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stopService"
        tools:layout_editor_absoluteY="275dp" />

    <Button
        android:id="@+id/refresh_connected_clients_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="61dp"
        android:layout_height="48dp"
        android:text="Refresh"
        android:textSize="8sp"
        app:layout_constraintLeft_toRightOf="@id/editText"
        tools:layout_editor_absoluteX="322dp"
        tools:layout_editor_absoluteY="4dp" />
</android.support.constraint.ConstraintLayout>
