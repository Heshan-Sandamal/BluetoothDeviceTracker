<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs4492.cseuom.bluetoothdevicetracker">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <!-- for android api above 6 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PairedDevicesListActivity"
            android:label="@string/title_activity_main2"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cs4492.cseuom.bluetoothdevicetracker.MainActivity" />
        </activity>
        <activity
            android:name=".AvailableDevicesList"
            android:label="@string/title_activity_avialable_devices_list"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cs4492.cseuom.bluetoothdevicetracker.MainActivity" />
        </activity>
        <activity
            android:name=".ServerActivity"
            android:label="@string/title_activity_server"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cs4492.cseuom.bluetoothdevicetracker.MainActivity" />
        </activity>

        <service
            android:name=".scheduler.PingScheduler"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".BluetoothVisibilityActivity"
            android:label="@string/title_activity_bluetooth_visibility"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cs4492.cseuom.bluetoothdevicetracker.MainActivity" />
        </activity>
    </application>

</manifest>
